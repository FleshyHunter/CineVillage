<%- include('../layouts/header') %>

  <div class="container">
    <div class="card" style="max-width: 600px; margin: 40px auto;">

      <img src="<%= movie.pictureUrl || '/images/placeholder.jpg' %>" alt="<%= movie.name %>"
        style="width:100%; border-radius: 6px;">

      <div style="padding: 20px;">
        <h2>
          <%= movie.name %>
        </h2>

        <p><strong>Status:</strong>
          <%= movie.status || 'N/A' %>
        </p>

        <p><strong>Release Date:</strong>
          <%= movie.releaseDate ? new Date(movie.releaseDate).toLocaleDateString() : 'N/A' %>
        </p>

        <p><strong>Genre:</strong>
          <%= Array.isArray(movie.genre) ? movie.genre.join(', ') 
            : (movie.genre || ' N/A') %>
        </p>

        <p><strong>Cast:</strong>
          <%= Array.isArray(movie.cast) ? movie.cast.join(', ') 
            : (movie.cast || ' N/A') %>
        </p>

        <p><strong>Language:</strong>
          <%= movie.language || 'N/A' %>
        </p>

        <p><strong>Subtitle:</strong>
          <%= movie.subtitle || 'N/A' %>
        </p>

        <p><strong>Producer:</strong>
          <%= movie.producer %>
        </p>

        <p><strong>Duration:</strong>
          <%= movie.duration %> min
        </p>

        <p><strong>Age Restriction:</strong>
          <%= movie.ageRestriction %>
        </p>

        <p><strong>Rating:</strong>
          <%= movie.rating %>
        </p>

        <p><strong>Description:</strong></p>
        <p>
          <%= movie.description %>
        </p>

      </div>

      <div style="padding: 0 20px 20px 20px;">
        <a href="/movies" class="btn btn-primary">
          &larr; Back to Movies
        </a>
      </div>

      <a href="/movies/edit/<%= movie._id %>" class="btn btn-primary">
        Edit Movie
      </a>

      <form action="/movies/delete/<%= movie._id %>" method="POST"
        onsubmit="return confirm('Are you sure you want to delete this movie?');">
        <button type="submit" class="btn btn-danger">Delete Movie</button>
      </form>

    </div>
  </div>

  <%- include('../layouts/footer') %>